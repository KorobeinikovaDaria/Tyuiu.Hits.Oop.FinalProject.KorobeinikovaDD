@using System.Linq﻿

@page "/courses"

@using Tyuiu.Hits.Oop.FinalProject.KorobeinikovaDD.Data.Models
@inject ICourseService data
@rendermode InteractiveServer

<PageTitle>Курсы</PageTitle>

<h1>Список доступных курсов</h1>

<div class="container">
    @if (courses == null)
    {
        <tr>
            <td colspan="5">Loading ...</td>
        </tr>
    }
    else
    {
        
        <div class="card-group">
            @foreach (var course in courses)
            {
                <div class="card">
                    <div class="card-header">
                        @course.Name
                    </div>
                    <div class="card-body">
                        <p>@course.Description</p>
                    </div>

                    <div class="card-footer">
                        <a class="btn btn-detail" href="lessons">Подробнее</a>
                        <a class="btn btn-edit" href="courseform/@course.Id">Изменить</a>
                        <button class="btn btn-danger" @onclick="async () => await DeleteTask(course.Id)">Удалить</button>
                    </div>

                </div>
            }
        </div>
        <div class="btn-group m-2">
            <a class="btn btn-edit" href="courseform/add">Создать новый курс</a>
        </div>
    }
</div>

@code {
    IEnumerable<Course>? courses;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        courses = await data.GetTaskItemsAsync();
    }

    async Task DeleteTask(int id)
    {
        await data.DeleteAsync(id);
        courses = await data.GetTaskItemsAsync();
    }
}
